---
import { comunasChile } from '../lib/comunas';
import { categorias } from '../lib/validations';

const { searchParams } = Astro.url;
const currentQuery = searchParams.get('q') || '';
const currentComuna = searchParams.get('comuna') || '';
const currentCategoria = searchParams.get('categoria') || '';
const currentTipoJornada = searchParams.getAll('tipo_jornada[]');

const comunasOrdenadas = [...comunasChile].sort((a, b) => a.nombre.localeCompare(b.nombre));
const tiposJornada = ['Full-time', 'Part-time', 'Freelance', 'Práctica'];
---

<div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6 md:p-8">
  <div class="flex items-center gap-3 mb-6">
    <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
      </svg>
    </div>
    <div>
      <h3 class="text-xl font-bold text-gray-900">Filtrar ofertas</h3>
      <p class="text-sm text-gray-600">Encuentra exactamente lo que buscas</p>
    </div>
  </div>

  <form method="GET" action="/ofertas" class="space-y-6">
    <!-- Búsqueda por texto -->
    <div>
      <label for="q" class="block text-sm font-semibold text-gray-700 mb-2">
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          Buscar por palabra clave
        </div>
      </label>
      <div class="relative">
        <input
          type="text"
          name="q"
          id="q"
          placeholder="Ej: Desarrollador, Vendedor, Contador..."
          value={currentQuery}
          class="w-full px-4 py-3 pl-11 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
        />
        <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Filtro por comuna -->
      <div>
        <label for="comuna" class="block text-sm font-semibold text-gray-700 mb-2">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Comuna
          </div>
        </label>
        <div class="relative">
          <select
            name="comuna"
            id="comuna"
            class="w-full px-4 py-3 pl-11 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent appearance-none bg-white transition-all"
          >
            <option value="">Todas las comunas</option>
            {comunasOrdenadas.map((comuna) => (
              <option value={comuna.nombre} selected={currentComuna === comuna.nombre}>
                {comuna.nombre}
              </option>
            ))}
          </select>
          <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <svg class="absolute right-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </div>
      </div>

      <!-- Filtro por categoría -->
      <div>
        <label for="categoria" class="block text-sm font-semibold text-gray-700 mb-2">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
            Categoría
          </div>
        </label>
        <div class="relative">
          <select
            name="categoria"
            id="categoria"
            class="w-full px-4 py-3 pl-11 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent appearance-none bg-white transition-all"
          >
            <option value="">Todas las categorías</option>
            {categorias.map((cat) => (
              <option value={cat} selected={currentCategoria === cat}>
                {cat}
              </option>
            ))}
          </select>
          <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
          <svg class="absolute right-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </div>
      </div>

      <!-- Filtro por tipo de jornada (Modal on mobile, inline on desktop) -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-2">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Tipo de jornada
          </div>
        </label>
        <div class="space-y-2 p-4 border border-gray-300 rounded-xl bg-gray-50">
          {tiposJornada.map((tipo) => (
            <label class="flex items-center gap-3 cursor-pointer group">
              <input
                type="checkbox"
                name="tipo_jornada[]"
                value={tipo}
                checked={currentTipoJornada.includes(tipo)}
                class="w-5 h-5 rounded border-gray-300 text-blue-600 focus:ring-2 focus:ring-blue-500 transition-all"
              />
              <span class="text-sm text-gray-700 group-hover:text-gray-900 font-medium transition-colors">
                {tipo}
              </span>
            </label>
          ))}
        </div>
      </div>
    </div>

    <!-- Botones de acción -->
    <div class="flex flex-col sm:flex-row gap-3 pt-4">
      <button
        type="submit"
        class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-xl font-semibold hover:shadow-lg transform hover:-translate-y-0.5 transition-all"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        Buscar ofertas
      </button>

      <a
        href="/ofertas"
        class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-white border-2 border-gray-300 text-gray-700 rounded-xl font-semibold hover:border-gray-400 transition-all"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
        </svg>
        Limpiar filtros
      </a>
    </div>
  </form>
</div>
