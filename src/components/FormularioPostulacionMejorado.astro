<script define:vars={{ ofertaId, titulo, empresa }}>
  // Importar utilidades de validaci√≥n
  // (En producci√≥n, usar imports normales)
  
  // ==========================================================================
  // ESTADO DEL FORMULARIO
  // ==========================================================================
  
  let selectedFile = null;
  let formData = {};
  
  // ==========================================================================
  // ELEMENTOS DEL DOM
  // ==========================================================================
  
  const form = document.getElementById('form-postulacion');
  const dropZone = document.getElementById('drop-zone');
  const dropZoneDefault = document.getElementById('drop-zone-default');
  const dropZonePreview = document.getElementById('drop-zone-preview');
  const cvInput = document.getElementById('cv');
  const removeFileBtn = document.getElementById('remove-file');
  const toggleCamposBtn = document.getElementById('toggle-campos-adicionales');
  const camposAdicionalesDiv = document.getElementById('campos-adicionales');
  const chevronIcon = document.getElementById('chevron-icon');
  
  // Inputs
  const nombreInput = document.getElementById('nombre');
  const rutInput = document.getElementById('rut');
  const emailInput = document.getElementById('email');
  const telefonoInput = document.getElementById('telefono');
  const linkedinInput = document.getElementById('linkedin');
  const mensajeTextarea = document.getElementById('mensaje');
  
  // Estados
  const loadingState = document.getElementById('loading-state');
  const successState = document.getElementById('success-state');
  const errorState = document.getElementById('error-state');
  const submitButton = document.getElementById('submit-button');
  
  // Completitud
  const completitudBarra = document.getElementById('completitud-barra');
  const completitudPorcentaje = document.getElementById('completitud-porcentaje');
  
  // ==========================================================================
  // UTILIDADES DE VALIDACI√ìN RUT
  // ==========================================================================
  
  function cleanRut(rut) {
    return rut.replace(/[.\-]/g, '').toUpperCase();
  }
  
  function formatRut(rut) {
    const cleaned = cleanRut(rut);
    if (cleaned.length < 2) return cleaned;
    
    const body = cleaned.slice(0, -1);
    const dv = cleaned.slice(-1);
    const formattedBody = body.replace(/\B(?=(\d{3})+(?!\d))/g, '.');
    return `${formattedBody}-${dv}`;
  }
  
  function calculateDV(rut) {
    const cleanedRut = rut.replace(/[^0-9]/g, '');
    let suma = 0;
    let multiplicador = 2;
    
    for (let i = cleanedRut.length - 1; i >= 0; i--) {
      suma += parseInt(cleanedRut[i]) * multiplicador;
      multiplicador = multiplicador === 7 ? 2 : multiplicador + 1;
    }
    
    const resto = suma % 11;
    const dv = 11 - resto;
    
    if (dv === 11) return '0';
    if (dv === 10) return 'K';
    return dv.toString();
  }
  
  function validateRut(rut) {
    if (!rut || rut.trim() === '') return false;
    
    const cleaned = cleanRut(rut);
    
    if (cleaned.length < 8 || cleaned.length > 9) return false;
    if (!/^[0-9]+[0-9K]$/.test(cleaned)) return false;
    
    const body = cleaned.slice(0, -1);
    const dv = cleaned.slice(-1);
    const calculatedDV = calculateDV(body);
    
    return dv === calculatedDV;
  }
  
  // ==========================================================================
  // UTILIDADES DE VALIDACI√ìN TEL√âFONO
  // ==========================================================================
  
  function cleanPhone(phone) {
    return phone.replace(/[\s\-()]/g, '');
  }
  
  function formatPhone(phone) {
    const cleaned = cleanPhone(phone);
    const withoutPrefix = cleaned.replace(/^\+?56/, '');
    
    if (withoutPrefix.length === 9 && withoutPrefix.startsWith('9')) {
      return `+56 9 ${withoutPrefix.substring(1, 5)} ${withoutPrefix.substring(5)}`;
    }
    
    return `+56 ${withoutPrefix}`;
  }
  
  function validatePhone(phone) {
    if (!phone || phone.trim() === '') return false;
    
    const cleaned = cleanPhone(phone);
    const withoutPrefix = cleaned.replace(/^\+?56/, '');
    
    if (!/^\d+$/.test(withoutPrefix)) return false;
    
    if (withoutPrefix.length === 9 && withoutPrefix.startsWith('9')) return true;
    if (withoutPrefix.length >= 7 && withoutPrefix.length <= 9) return true;
    
    return false;
  }
  
  // ==========================================================================
  // EVENT LISTENERS - TOGGLE CAMPOS ADICIONALES
  // ==========================================================================
  
  toggleCamposBtn?.addEventListener('click', () => {
    camposAdicionalesDiv.classList.toggle('hidden');
    chevronIcon.classList.toggle('rotate-180');
    
    if (!camposAdicionalesDiv.classList.contains('hidden')) {
      setTimeout(() => {
        camposAdicionalesDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      }, 100);
    }
  });
  
  // ==========================================================================
  // EVENT LISTENERS - RUT FORMATTING
  // ==========================================================================
  
  rutInput?.addEventListener('input', (e) => {
    const input = e.target;
    const cursorPos = input.selectionStart;
    const oldValue = input.value;
    const cleaned = cleanRut(input.value);
    
    if (cleaned.length > 0) {
      input.value = formatRut(input.value);
      
      // Mantener posici√≥n del cursor
      if (input.value.length !== oldValue.length) {
        const diff = input.value.length - oldValue.length;
        input.setSelectionRange(cursorPos + diff, cursorPos + diff);
      }
    }
    
    // Validar
    const errorEl = document.getElementById('rut-error');
    if (input.value && !validateRut(input.value)) {
      errorEl.textContent = 'RUT inv√°lido';
      errorEl.classList.remove('hidden');
      input.classList.add('border-error');
    } else {
      errorEl.classList.add('hidden');
      input.classList.remove('border-error');
    }
    
    calcularCompletitud();
  });
  
  // ==========================================================================
  // EVENT LISTENERS - TEL√âFONO FORMATTING
  // ==========================================================================
  
  telefonoInput?.addEventListener('blur', (e) => {
    if (e.target.value) {
      e.target.value = formatPhone(e.target.value);
    }
    
    const errorEl = document.getElementById('telefono-error');
    if (e.target.value && !validatePhone(e.target.value)) {
      errorEl.textContent = 'Tel√©fono inv√°lido';
      errorEl.classList.remove('hidden');
      e.target.classList.add('border-error');
    } else {
      errorEl.classList.add('hidden');
      e.target.classList.remove('border-error');
    }
    
    calcularCompletitud();
  });
  
  // ==========================================================================
  // EVENT LISTENERS - VALIDACI√ìN EMAIL
  // ==========================================================================
  
  emailInput?.addEventListener('blur', (e) => {
    const errorEl = document.getElementById('email-error');
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    
    if (e.target.value && !emailRegex.test(e.target.value)) {
      errorEl.textContent = 'Email inv√°lido';
      errorEl.classList.remove('hidden');
      e.target.classList.add('border-error');
    } else {
      errorEl.classList.add('hidden');
      e.target.classList.remove('border-error');
    }
    
    calcularCompletitud();
  });
  
  // ==========================================================================
  // EVENT LISTENERS - VALIDACI√ìN LINKEDIN
  // ==========================================================================
  
  linkedinInput?.addEventListener('blur', (e) => {
    const errorEl = document.getElementById('linkedin-error');
    
    if (e.target.value && !e.target.value.includes('linkedin.com')) {
      errorEl.textContent = 'Debe ser una URL de LinkedIn v√°lida';
      errorEl.classList.remove('hidden');
      e.target.classList.add('border-error');
    } else {
      errorEl.classList.add('hidden');
      e.target.classList.remove('border-error');
    }
    
    calcularCompletitud();
  });
  
  // ==========================================================================
  // EVENT LISTENERS - CONTADOR DE MENSAJE
  // ==========================================================================
  
  mensajeTextarea?.addEventListener('input', (e) => {
    const contador = document.getElementById('mensaje-contador');
    contador.textContent = e.target.value.length;
    calcularCompletitud();
  });
  
  // ==========================================================================
  // DRAG & DROP CV
  // ==========================================================================
  
  dropZone?.addEventListener('click', () => cvInput?.click());
  
  dropZone?.addEventListener('dragover', (e) => {
    e.preventDefault();
    dropZone.classList.add('border-accent', 'bg-accent/5');
  });
  
  dropZone?.addEventListener('dragleave', () => {
    dropZone.classList.remove('border-accent', 'bg-accent/5');
  });
  
  dropZone?.addEventListener('drop', (e) => {
    e.preventDefault();
    dropZone.classList.remove('border-accent', 'bg-accent/5');
    
    const files = e.dataTransfer.files;
    if (files.length > 0) {
      handleFileSelect(files[0]);
    }
  });
  
  cvInput?.addEventListener('change', (e) => {
    if (e.target.files.length > 0) {
      handleFileSelect(e.target.files[0]);
    }
  });
  
  removeFileBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    selectedFile = null;
    cvInput.value = '';
    dropZonePreview.classList.add('hidden');
    dropZoneDefault.classList.remove('hidden');
    document.getElementById('cv-error')?.classList.add('hidden');
    calcularCompletitud();
  });
  
  function handleFileSelect(file) {
    // Validar que sea PDF
    if (file.type !== 'application/pdf') {
      showError('cv-error', 'Solo se aceptan archivos PDF');
      return;
    }
    
    // Validar tama√±o (5MB)
    const MAX_SIZE = 5 * 1024 * 1024;
    if (file.size > MAX_SIZE) {
      showError('cv-error', 'El archivo no debe superar 5MB');
      return;
    }
    
    selectedFile = file;
    
    // Mostrar preview
    document.getElementById('file-name').textContent = file.name;
    document.getElementById('file-size').textContent = formatFileSize(file.size);
    dropZoneDefault.classList.add('hidden');
    dropZonePreview.classList.remove('hidden');
    document.getElementById('cv-error')?.classList.add('hidden');
    
    calcularCompletitud();
  }
  
  function formatFileSize(bytes) {
    if (bytes === 0) return '0 Bytes';
    const k = 1024;
    const sizes = ['Bytes', 'KB', 'MB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return Math.round((bytes / Math.pow(k, i)) * 100) / 100 + ' ' + sizes[i];
  }
  
  function showError(elementId, message) {
    const errorEl = document.getElementById(elementId);
    if (errorEl) {
      errorEl.textContent = message;
      errorEl.classList.remove('hidden');
    }
  }
  
  // ==========================================================================
  // CALCULAR COMPLETITUD DEL PERFIL
  // ==========================================================================
  
  function calcularCompletitud() {
    let score = 0;
    const maxScore = 100;
    
    // Campos obligatorios (40 puntos)
    if (nombreInput?.value) score += 10;
    if (emailInput?.value && !emailInput.classList.contains('border-error')) score += 10;
    if (telefonoInput?.value && !telefonoInput.classList.contains('border-error')) score += 10;
    if (selectedFile) score += 10;
    
    // Campos recomendados (20 puntos)
    if (rutInput?.value && !rutInput.classList.contains('border-error')) score += 10;
    if (document.getElementById('region')?.value) score += 5;
    if (document.getElementById('comuna')?.value) score += 5;
    
    // Campos adicionales (40 puntos)
    if (document.getElementById('carrera')?.value) score += 5;
    if (document.getElementById('nivel_estudios')?.value) score += 5;
    if (document.getElementById('anos_experiencia')?.value) score += 5;
    if (document.getElementById('rango_sueldo')?.value) score += 5;
    if (document.getElementById('disponibilidad')?.value) score += 5;
    if (linkedinInput?.value && !linkedinInput.classList.contains('border-error')) score += 5;
    if (document.getElementById('portfolio')?.value) score += 5;
    if (document.getElementById('github')?.value) score += 5;
    
    // Actualizar barra
    completitudBarra.style.width = `${score}%`;
    completitudPorcentaje.textContent = `${score}%`;
    
    // Cambiar color seg√∫n score
    if (score >= 80) {
      completitudBarra.className = 'bg-green-600 h-2.5 rounded-full transition-all duration-500';
    } else if (score >= 50) {
      completitudBarra.className = 'bg-yellow-500 h-2.5 rounded-full transition-all duration-500';
    } else {
      completitudBarra.className = 'bg-blue-600 h-2.5 rounded-full transition-all duration-500';
    }
  }
  
  // ==========================================================================
  // ENV√çO DEL FORMULARIO
  // ==========================================================================
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Validar campos obligatorios
    if (!selectedFile) {
      showError('cv-error', 'Debes subir tu CV en formato PDF');
      return;
    }
    
    if (!nombreInput?.value || !emailInput?.value || !telefonoInput?.value) {
      alert('Por favor completa todos los campos obligatorios');
      return;
    }
    
    // Preparar FormData
    const formDataToSend = new FormData();
    formDataToSend.append('oferta_id', ofertaId);
    formDataToSend.append('nombre', nombreInput.value);
    formDataToSend.append('email', emailInput.value);
    formDataToSend.append('telefono', telefonoInput.value);
    formDataToSend.append('cv', selectedFile);
    
    // Campos opcionales
    if (rutInput?.value) formDataToSend.append('rut', rutInput.value);
    if (document.getElementById('region')?.value) formDataToSend.append('region', document.getElementById('region').value);
    if (document.getElementById('comuna')?.value) formDataToSend.append('comuna', document.getElementById('comuna').value);
    if (document.getElementById('carrera')?.value) formDataToSend.append('carrera', document.getElementById('carrera').value);
    if (document.getElementById('nivel_estudios')?.value) formDataToSend.append('nivel_estudios', document.getElementById('nivel_estudios').value);
    if (document.getElementById('anos_experiencia')?.value) formDataToSend.append('anos_experiencia', document.getElementById('anos_experiencia').value);
    if (document.getElementById('rango_sueldo')?.value) formDataToSend.append('rango_sueldo_esperado', document.getElementById('rango_sueldo').value);
    if (document.getElementById('disponibilidad')?.value) formDataToSend.append('disponibilidad', document.getElementById('disponibilidad').value);
    if (linkedinInput?.value) formDataToSend.append('linkedin_url', linkedinInput.value);
    if (document.getElementById('portfolio')?.value) formDataToSend.append('portfolio_url', document.getElementById('portfolio').value);
    if (document.getElementById('github')?.value) formDataToSend.append('github_url', document.getElementById('github').value);
    if (mensajeTextarea?.value) formDataToSend.append('mensaje', mensajeTextarea.value);
    
    // Mostrar loading
    form.classList.add('hidden');
    loadingState.classList.remove('hidden');
    
    try {
      const response = await fetch('/api/postular', {
        method: 'POST',
        body: formDataToSend
      });
      
      const result = await response.json();
      
      if (response.ok) {
        loadingState.classList.add('hidden');
        successState.classList.remove('hidden');
        
        // Redirigir despu√©s de 3 segundos
        setTimeout(() => {
          window.location.href = `/oferta/${ofertaId}`;
        }, 3000);
      } else {
        throw new Error(result.error || 'Error al enviar postulaci√≥n');
      }
    } catch (error) {
      loadingState.classList.add('hidden');
      errorState.classList.remove('hidden');
      document.getElementById('error-message').textContent = error.message;
      
      // Mostrar formulario de nuevo despu√©s de 5 segundos
      setTimeout(() => {
        errorState.classList.add('hidden');
        form.classList.remove('hidden');
      }, 5000);
    }
  });
  
  // Calcular completitud inicial
  calcularCompletitud();
  
  // Event listeners para todos los campos para recalcular completitud
  document.querySelectorAll('input, select, textarea').forEach(field => {
    field.addEventListener('input', calcularCompletitud);
    field.addEventListener('change', calcularCompletitud);
  });
</script>

