---
/**
 * Skeleton para OfertaCard
 *
 * Muestra un placeholder mientras cargan las ofertas
 */

import Skeleton from './Skeleton.astro';
---

<div class="bg-white rounded-lg shadow-sm border border-border p-6 hover:shadow-md transition">
  <!-- Badge tipo jornada -->
  <div class="mb-3">
    <Skeleton width="80px" height="24px" className="rounded-full" />
  </div>

  <!-- Título -->
  <Skeleton width="100%" height="24px" className="mb-3" />

  <!-- Empresa -->
  <Skeleton width="60%" height="16px" className="mb-4" />

  <!-- Descripción (3 líneas) -->
  <div class="space-y-2 mb-4">
    <Skeleton width="100%" height="14px" />
    <Skeleton width="100%" height="14px" />
    <Skeleton width="70%" height="14px" />
  </div>

  <!-- Ubicación y fecha -->
  <div class="flex items-center gap-4 text-sm mb-4">
    <Skeleton width="120px" height="16px" />
    <Skeleton width="100px" height="16px" />
  </div>

  <!-- Botón -->
  <Skeleton width="100%" height="40px" className="rounded-lg" />
</div>
