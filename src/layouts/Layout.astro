---
/**
 * Layout base para Portal de Empleos Chile
 *
 * Proporciona estructura comÃºn: header, footer, meta tags, estilos
 * Basado en SPECIFICATIONS.md secciones 6.1 y 4
 */

import Toast from '../components/Toast.astro';

interface Props {
  title?: string;
  description?: string;
  ogType?: string;
  ogImage?: string;
  canonicalUrl?: string;
}

const {
  title = 'Portal de Empleos Chile - Encuentra trabajo cerca de ti',
  description = 'Plataforma de empleos georeferenciada en Chile. Busca y postula a ofertas laborales sin registro. Mapa interactivo con ofertas de trabajo en todo Chile.',
  ogType = 'website',
  ogImage,
  canonicalUrl
} = Astro.props;

const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'http://localhost:4321';
const currentUrl = canonicalUrl || new URL(Astro.url.pathname, siteUrl).toString();
const imageUrl = ogImage || `${siteUrl}/og-default.png`;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <meta name="robots" content="index, follow" />
    <meta name="keywords" content="empleos chile, trabajo chile, ofertas laborales, mapa empleos, postular trabajo" />
    <link rel="canonical" href={currentUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:locale" content="es_CL" />
    <meta property="og:site_name" content="Portal de Empleos Chile" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageUrl} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preload critical resources for performance -->
    <link
      rel="preconnect"
      href="https://unpkg.com"
      crossorigin
    />

    <!-- Leaflet CSS para mapas -->
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
      integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
      crossorigin=""
    />

    <!-- Leaflet MarkerCluster CSS -->
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet.markercluster@1.5.3/dist/MarkerCluster.css"
      crossorigin=""
    />
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet.markercluster@1.5.3/dist/MarkerCluster.Default.css"
      crossorigin=""
    />

    <title>{title}</title>

    <!-- Slot for additional head content (JSON-LD, extra meta tags, etc.) -->
    <slot name="head" />
  </head>

  <body class="min-h-screen flex flex-col bg-background dark:bg-dark-bg text-text-primary dark:text-dark-text-primary transition-colors duration-200">
    <!-- Header -->
    <header class="bg-white dark:bg-dark-surface border-b border-border dark:border-dark-border sticky top-0 z-50 shadow-sm">
      <div class="container mx-auto px-4 md:px-8 py-4">
        <nav class="flex items-center justify-between">
          <!-- Logo -->
          <a href="/" class="flex items-center gap-2 hover:opacity-80 transition" aria-label="Portal de Empleos Chile - Ir a pÃ¡gina principal">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-8 h-8 text-accent"
              aria-hidden="true"
            >
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            <span class="text-xl font-semibold text-text-primary">
              Portal de Empleos <span class="text-accent">Chile</span>
            </span>
          </a>

          <!-- Navigation -->
          <div class="flex items-center gap-3">
            <a
              href="/"
              class="text-text-secondary hover:text-text-primary dark:text-dark-text-secondary dark:hover:text-dark-text-primary transition hidden sm:inline"
            >
              Buscar empleos
            </a>

            <!-- Dark Mode Toggle -->
            <button
              id="theme-toggle"
              class="p-2 rounded-lg hover:bg-surface dark:hover:bg-dark-surface transition-colors"
              aria-label="Cambiar tema"
              title="Cambiar tema"
            >
              <svg id="theme-toggle-light-icon" class="w-5 h-5 hidden" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"></path>
              </svg>
              <svg id="theme-toggle-dark-icon" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
              </svg>
            </button>

            <a
              href="/#favoritos"
              id="favorites-link"
              class="text-text-secondary hover:text-text-primary dark:text-dark-text-secondary dark:hover:text-dark-text-primary transition flex items-center gap-2 relative"
              aria-label="Ver favoritos"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
              <span id="favorites-count" class="hidden absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center font-bold">0</span>
            </a>
            <a
              href="/empleador/login"
              class="px-4 py-2 bg-accent text-white rounded-lg hover:bg-accent-hover transition font-medium"
            >
              Empleadores
            </a>
          </div>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-surface dark:bg-dark-surface border-t border-border dark:border-dark-border mt-12">
      <div class="container mx-auto px-4 md:px-8 py-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Columna 1: Sobre el proyecto -->
          <div>
            <h3 class="font-semibold text-lg mb-3">Portal de Empleos Chile</h3>
            <p class="text-text-secondary dark:text-dark-text-secondary text-sm leading-relaxed">
              Plataforma minimalista para conectar candidatos con ofertas laborales
              en Chile mediante georeferenciaciÃ³n.
            </p>
          </div>

          <!-- Columna 2: Enlaces -->
          <div>
            <h3 class="font-semibold text-lg mb-3">Enlaces</h3>
            <ul class="space-y-2 text-sm">
              <li>
                <a href="/" class="text-text-secondary dark:text-dark-text-secondary hover:text-accent transition">
                  Buscar empleos
                </a>
              </li>
              <li>
                <a href="/empleador/registro" class="text-text-secondary dark:text-dark-text-secondary hover:text-accent transition">
                  Publicar oferta
                </a>
              </li>
              <li>
                <a href="/empleador/login" class="text-text-secondary dark:text-dark-text-secondary hover:text-accent transition">
                  Acceso empleadores
                </a>
              </li>
              <li>
                <a href="/privacidad" class="text-text-secondary dark:text-dark-text-secondary hover:text-accent transition">
                  PolÃ­tica de privacidad
                </a>
              </li>
            </ul>
          </div>

          <!-- Columna 3: Contacto -->
          <div>
            <h3 class="font-semibold text-lg mb-3">Contacto</h3>
            <p class="text-text-secondary dark:text-dark-text-secondary text-sm">
              Â¿Preguntas o sugerencias?
            </p>
            <a
              href="mailto:contacto@portalempleoschile.cl"
              class="text-accent hover:text-accent-hover text-sm transition"
            >
              contacto@portalempleoschile.cl
            </a>
          </div>
        </div>

        <!-- Copyright -->
        <div class="mt-8 pt-6 border-t border-border dark:border-dark-border text-center text-sm text-text-secondary dark:text-dark-text-secondary">
          <p>
            Â© {new Date().getFullYear()} Portal de Empleos Chile. Todos los derechos reservados.
          </p>
          <p class="mt-1">
            Hecho en Chile ðŸ‡¨ðŸ‡±
          </p>
        </div>
      </div>
    </footer>

    <!-- Toast Notifications -->
    <Toast />

    <!-- Favorites counter script -->
    <script is:inline>
      // Actualizar contador de favoritos
      function updateFavoritesCount() {
        const favorites = JSON.parse(localStorage.getItem('job-favorites') || '[]');
        const countElement = document.getElementById('favorites-count');

        if (countElement) {
          if (favorites.length > 0) {
            countElement.textContent = favorites.length.toString();
            countElement.classList.remove('hidden');
          } else {
            countElement.classList.add('hidden');
          }
        }
      }

      // Actualizar al cargar la pÃ¡gina
      document.addEventListener('DOMContentLoaded', updateFavoritesCount);

      // Actualizar cuando cambien los favoritos
      window.addEventListener('favorites-updated', updateFavoritesCount);
    </script>

    <!-- Dark Mode Toggle Script -->
    <script is:inline>
      // Initialize theme on page load (before DOMContentLoaded to prevent flash)
      (function() {
        const theme = localStorage.getItem('theme') || 'light';
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      })();

      // Theme toggle functionality
      document.addEventListener('DOMContentLoaded', function() {
        const themeToggle = document.getElementById('theme-toggle');
        const lightIcon = document.getElementById('theme-toggle-light-icon');
        const darkIcon = document.getElementById('theme-toggle-dark-icon');

        function updateIcons(theme) {
          if (theme === 'dark') {
            lightIcon.classList.remove('hidden');
            darkIcon.classList.add('hidden');
          } else {
            lightIcon.classList.add('hidden');
            darkIcon.classList.remove('hidden');
          }
        }

        // Set initial icon state
        const currentTheme = localStorage.getItem('theme') || 'light';
        updateIcons(currentTheme);

        // Toggle theme on button click
        themeToggle.addEventListener('click', function() {
          const html = document.documentElement;
          const currentTheme = localStorage.getItem('theme') || 'light';
          const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

          if (newTheme === 'dark') {
            html.classList.add('dark');
          } else {
            html.classList.remove('dark');
          }

          localStorage.setItem('theme', newTheme);
          updateIcons(newTheme);

          // Show toast notification if available
          if (window.toast) {
            window.toast.success(`Modo ${newTheme === 'dark' ? 'oscuro' : 'claro'} activado`);
          }
        });
      });
    </script>
  </body>
</html>
