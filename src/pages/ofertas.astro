---
import Layout from '../layouts/Layout.astro';
import MapaOfertas from '../components/MapaOfertas.astro';
import OfertaCard from '../components/OfertaCard.astro';
import FiltrosBusqueda from '../components/FiltrosBusqueda.astro';
import { supabase } from '../lib/supabase';

// Obtener parámetros de búsqueda
const { searchParams } = Astro.url;
const query = searchParams.get('q') || '';
const comuna = searchParams.get('comuna') || '';
const categoria = searchParams.get('categoria') || '';
const tiposJornada = searchParams.getAll('tipo_jornada[]');

// Construir query de Supabase
let dbQuery = supabase
  .from('ofertas')
  .select('*')
  .eq('activa', true)
  .gte('expires_at', new Date().toISOString())
  .order('created_at', { ascending: false });

// Aplicar filtros
if (query) {
  dbQuery = dbQuery.or(`titulo.ilike.%${query}%,empresa.ilike.%${query}%`);
}

if (comuna) {
  dbQuery = dbQuery.eq('comuna', comuna);
}

if (categoria) {
  dbQuery = dbQuery.eq('categoria', categoria);
}

if (tiposJornada.length > 0) {
  dbQuery = dbQuery.in('tipo_jornada', tiposJornada);
}

const { data: ofertas, error } = await dbQuery;

if (error) {
  console.error('Error fetching ofertas:', error);
}

// Preparar datos para el mapa
const ofertasMap = (ofertas || []).map((oferta) => ({
  id: oferta.id,
  titulo: oferta.titulo,
  empresa: oferta.empresa,
  lat: oferta.ubicacion.coordinates[1], // PostGIS usa [lng, lat]
  lng: oferta.ubicacion.coordinates[0],
}));

const hasFilters = query || comuna || categoria || tiposJornada.length > 0;
---

<Layout title="Ofertas Laborales en Chile - Portal de Empleo">
  <!-- Hero Section -->
  <div class="bg-gradient-to-br from-blue-50 via-white to-purple-50 border-b border-gray-200">
    <div class="container mx-auto px-4 sm:px-8 py-12">
      <div class="max-w-3xl">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white rounded-full shadow-sm border border-gray-200 mb-6">
          <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
          <span class="text-sm font-medium text-gray-700">{ofertas?.length || 0} ofertas activas</span>
        </div>

        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Encuentra tu próximo
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">
            empleo en Chile
          </span>
        </h1>

        <p class="text-xl text-gray-600 mb-8">
          Explora oportunidades laborales en todo el país. Sin registro, 100% gratis.
        </p>

        <!-- Quick Stats -->
        <div class="grid grid-cols-3 gap-4">
          <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100">
            <div class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">
              {ofertas?.length || 0}
            </div>
            <div class="text-xs text-gray-600 mt-1">Ofertas</div>
          </div>
          <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100">
            <div class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">
              15
            </div>
            <div class="text-xs text-gray-600 mt-1">Regiones</div>
          </div>
          <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100">
            <div class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">
              200+
            </div>
            <div class="text-xs text-gray-600 mt-1">Empresas</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 sm:px-8 py-8">
    <!-- Filtros de búsqueda -->
    <div class="mb-8">
      <FiltrosBusqueda />
    </div>

    <!-- Active Filters Badge -->
    {hasFilters && (
      <div class="mb-6 flex items-center gap-3">
        <span class="text-sm text-gray-600">Filtros activos:</span>
        <div class="flex flex-wrap gap-2">
          {query && (
            <span class="inline-flex items-center gap-1 px-3 py-1 bg-blue-100 text-blue-700 rounded-lg text-sm">
              Búsqueda: "{query}"
              <a href="/ofertas" class="hover:text-blue-900">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </a>
            </span>
          )}
          {comuna && (
            <span class="inline-flex items-center gap-1 px-3 py-1 bg-purple-100 text-purple-700 rounded-lg text-sm">
              {comuna}
              <a href={`/ofertas?${new URLSearchParams(Object.fromEntries(Array.from(searchParams.entries()).filter(([k]) => k !== 'comuna')))}`} class="hover:text-purple-900">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </a>
            </span>
          )}
          {categoria && (
            <span class="inline-flex items-center gap-1 px-3 py-1 bg-green-100 text-green-700 rounded-lg text-sm">
              {categoria}
              <a href={`/ofertas?${new URLSearchParams(Object.fromEntries(Array.from(searchParams.entries()).filter(([k]) => k !== 'categoria')))}`} class="hover:text-green-900">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </a>
            </span>
          )}
          <a href="/ofertas" class="text-sm text-gray-500 hover:text-gray-700 underline">
            Limpiar todos
          </a>
        </div>
      </div>
    )}

    <!-- Mapa Section -->
    <div class="mb-12">
      <div class="flex items-center justify-between mb-6">
        <div>
          <h2 class="text-2xl font-bold text-gray-900">Explora en el mapa</h2>
          <p class="text-gray-600 mt-1">Visualiza las ofertas cerca de ti</p>
        </div>
        <div class="hidden md:flex items-center gap-2 text-sm text-gray-500">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Click en los marcadores para ver detalles
        </div>
      </div>
      <div class="rounded-2xl overflow-hidden border-2 border-gray-200 shadow-lg">
        <MapaOfertas ofertas={ofertasMap} />
      </div>
    </div>

    <!-- Lista de ofertas -->
    <div>
      <div class="flex items-center justify-between mb-6">
        <div>
          <h2 class="text-2xl font-bold text-gray-900">
            {hasFilters ? 'Resultados de búsqueda' : 'Ofertas recientes'}
          </h2>
          <p class="text-gray-600 mt-1">
            {ofertas && ofertas.length > 0
              ? `${ofertas.length} ${ofertas.length === 1 ? 'oferta encontrada' : 'ofertas encontradas'}`
              : 'No hay ofertas disponibles'
            }
          </p>
        </div>

        <!-- Sort dropdown (futuro) -->
        <div class="hidden md:block">
          <select class="px-4 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white">
            <option>Más recientes</option>
            <option>Más antiguas</option>
            <option>A-Z</option>
          </select>
        </div>
      </div>

      {
        ofertas && ofertas.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {ofertas.map((oferta) => (
              <OfertaCard oferta={oferta} />
            ))}
          </div>
        ) : (
          <div class="text-center py-16 bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl border-2 border-dashed border-gray-300">
            <div class="w-16 h-16 mx-auto mb-4 bg-gray-200 rounded-full flex items-center justify-center">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              No se encontraron ofertas
            </h3>
            <p class="text-gray-600 mb-6 max-w-md mx-auto">
              {hasFilters
                ? 'Intenta ajustar tus filtros o busca otros términos'
                : 'Aún no hay ofertas publicadas. ¡Vuelve pronto!'
              }
            </p>
            {hasFilters && (
              <a
                href="/ofertas"
                class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-lg font-medium hover:shadow-lg transition-all"
              >
                Ver todas las ofertas
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            )}
          </div>
        )
      }
    </div>

    <!-- CTA Bottom Section -->
    {ofertas && ofertas.length > 0 && (
      <div class="mt-16 bg-gradient-to-br from-blue-50 to-purple-50 rounded-3xl p-8 md:p-12 border border-gray-200">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            ¿No encontraste lo que buscabas?
          </h2>
          <p class="text-lg text-gray-600 mb-8">
            Nuevas ofertas se publican todos los días. Vuelve pronto o refina tu búsqueda.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/ofertas"
              class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-white border-2 border-gray-300 text-gray-700 rounded-xl font-medium hover:border-gray-400 transition-all"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
              Limpiar filtros
            </a>
            <a
              href="/"
              class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-xl font-medium hover:shadow-lg transition-all"
            >
              Volver al inicio
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    )}
  </div>
</Layout>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
